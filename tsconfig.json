{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": false,
    "target": "es2017",
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
    ],
    "paths": {
      "*": ["*", "./src/types/*"]
    },
    "lib": [
      "es2017",
      "es2015",
      "es6"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
